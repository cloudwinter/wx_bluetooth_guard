/* components/myComponent.wxss */

.input-wrapper {
    margin: 40rpx auto 0 auto;
    width: 600rpx;
    height: 88rpx;
    border: 2rpx solid #ddd;
    border-radius: 16rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.input-wrapper input {
    font-size: 32rpx;
    line-height: 88rpx;
    height: 100%;
}

.button-wrapper {
    margin-top: 40rpx;
}

.canvas {
    margin: 100rpx auto;
    width: 200px;
    height: 200px;
    /* border: 1px solid black; */
}

.tip {
    text-align: center;
}


/**index.wxss**/
.banner-image {
    width: 100%;
    /* height: 300rpx; */
  }
  
  .header{
   padding: 32rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   background-color: #fff;
  }
  
  .img-scan{
    width: 48rpx;
    height: 48rpx;
    margin-left: 64rpx;
  }
  
  
  .list-title {
    align-items: center;
    margin-left: 32rpx;
    font-size: 32rpx;
    color: #444;
    display: flex;
    height: 100rpx;
  }
  
  .list-item {
    /* height: 80rpx; */
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    /* align-items: center; */
    background-color: #fff;
    padding-left: 32rpx;
    padding-right: 48rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    position: relative;
  }
  
  .list-item-hover{
    background-color: #eee;
  }
  
  .item-arrow{
    position: absolute;
    right: 32rpx;
    top: 50%;
    margin-top: -18rpx;
    height: 36rpx;
    width: 21rpx;
  }
  
  .item-row{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
  }
  
  .item-left {
    flex: 1;
    margin-left: 32rpx;
  }

  
  
  .item-right {
    position: relative;
    align-items: center;
    margin-right: 32rpx;
  }
  
  .item-tip{
    font-size: 30rpx;
    color: #666;
  }
  
  .divider-line {
    background: #eee;
    height: 1rpx;
    width: 100%;
  }
  
  
  .connected_info {
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: #F0F0F0;
    padding: 10px;
    padding-bottom: 20px;
    margin-bottom: env(safe-area-inset-bottom);
    font-size: 14px;
    min-height: 100px;
    box-shadow: 0px 0px 3px 0px;
  }
  .connected_info .operation {
    position: absolute;
    display: inline-block;
    right: 30px;
  }
